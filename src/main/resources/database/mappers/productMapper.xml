<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.mhj.s1.product.ProductDAO">
  	<select id="getProductList" resultType="com.mhj.s1.product.ProductDTO">
  		SELECT PRODUCTNUM, PRODUCTNAME, PRODUCTRATING
  		FROM PRODUCT
  		ORDER BY PRODUCTNUM DESC
  	</select>
  	
	<select id="getProductDetail" parameterType="com.mhj.s1.product.ProductDTO" resultType="com.mhj.s1.product.ProductDTO"> 
		SELECT * FROM PROUDUCT WHERE PRODUCT=#{productNum}
	</select>
	
	<insert id="setAddProduct" parameterType="com.mhj.s1.product.ProductDTO">
		INSERT INTO PRODUCT
		VALUES (#{productNum}, #{productName}, #{productDetail}, 0.0)
	</insert>
 
  </mapper>